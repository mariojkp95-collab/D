{
  "name": "DRAKORIA - Mobile MMORPG",
  "short_name": "DRAKORIA",
  "description": "Un MMORPG mobile ispirato a NosTale con sistema di classi, combattimento e progressione",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e3c72",
  "theme_color": "#4CAF50",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "it",
  "categories": ["games", "entertainment"],
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Nuovo Personaggio",
      "short_name": "Nuovo",
      "description": "Crea un nuovo personaggio",
      "url": "/?action=create-character"
    },
    {
      "name": "Continua Gioco",
      "short_name": "Continua", 
      "description": "Continua con l'ultimo personaggio",
      "url": "/?action=continue-game"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "dir": "ltr",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/open-save",
      "accept": {
        "application/json": [".drak", ".save"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+drakoria",
      "url": "/join?server=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "save_file",
          "accept": [".drak", ".save", "application/json"]
        }
      ]
    }
  }
}